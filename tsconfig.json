{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "include": ["src/**/*.ts","node_modules/angular-bootstrap-md/**/*.ts" ],
  "exclude": [
      "node_modules"
  ],
}